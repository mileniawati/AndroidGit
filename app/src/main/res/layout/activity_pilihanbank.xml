<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_light"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="20dp"
        android:text="Pilihan Transaksi"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_light"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnceksaldo"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/saldoa" />

    <Button
        android:id="@+id/btnsetor"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/penyetorana" />

    <Button
        android:id="@+id/btntransfer"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"

        android:layout_marginTop="20dp"
        android:background="@drawable/transfera" />

    <Button
        android:id="@+id/btntarik"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"

        android:layout_marginTop="20dp"
        android:background="@drawable/penarikana" />

    <Button
        android:id="@+id/btnexit"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/keluar" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/holo_green_light"
        android:textSize="30dp"
        tools:text="" />

</LinearLayout>